        ))
      }
    </div>
  </section>

  <section class="">
    <!-- <div class="justify-between text-xl font-medium lg:flex lg:text-2xl">
      <h1
        class="rounded-md border border-black bg-black px-3 py-2 text-nowrap text-white"
      >
        ğŸŒ» Past Events
      </h1>
      <div class="mx-4 my-auto hidden w-full overflow-hidden lg:block">
        <img src="/images/wavy.svg" class="h-5" alt="" />
      </div>
      <div class="hidden items-center text-4xl text-nowrap lg:flex">
        ğŸ’» ğŸ•ï¸ ğŸƒâ€â™€ï¸
      </div>
    </div> -->

    <div class="mb-6 pl-2 text-center">
      <div class="text-3xl font-medium">
        <span
          class="inline-block rotate-1 rounded-md bg-amber-200 px-2 py-1 font-semibold text-neutral-800"
        >
          {events.length}
        </span> events hosted to date
      </div>
      <p
        class="mt-2 flex items-center justify-center gap-2 text-lg leading-relaxed text-balance text-neutral-600 max-lg:pb-4 lg:text-xl"
      >
        Many more to come...<span class="spinner"></span>
      </p>
    </div>

    <div
      class="event-grid grid grid-cols-2 gap-2 md:grid-cols-3 lg:grid-cols-5"
    >
      {
        events
          .filter(event => event.date.isBefore(now))
          .map(event => (
            <a
              href={`/event/${event.id}`}
              class="event-item overflow-hidden transition-opacity duration-300"
            >
              <CFImage
                src={event.image}
                alt={event.name}
                width={300}
                ratio={1}
                class="w-full overflow-hidden rounded-md"
              />
            </a>
          ))
      }
    </div>
  </section>

  <style is:global>
    /* .event-grid:has(.event-item:hover) .event-item:not(:hover) {
    opacity: 0.6;
  }

  .event-item {
    transition: opacity 0.3s ease;
  } */

    .parallax-img {
      transition: transform 0.1s ease-out;
      will-change: transform;
    }

    .spinner {
      display: inline-block;
      width: 1em;
      height: 1em;
      border: 2px solid #525252;
      border-top-color: #a3a3a3;
      border-radius: 50%;
      animation: spinner 0.8s linear infinite;
    }

    @keyframes spinner {
      to {
        transform: rotate(360deg);
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const parallaxImages = document.querySelectorAll(
        '.parallax-img'
      ) as NodeListOf<HTMLElement>

      document.addEventListener('mousemove', e => {
        const mouseX = e.clientX
        const mouseY = e.clientY
        const centerX = window.innerWidth / 2
        const centerY = window.innerHeight / 2

        parallaxImages.forEach(img => {
          const speed = parseFloat(img.getAttribute('data-speed') || '0.5')
          const x = (mouseX - centerX) * speed * 0.02
          const y = (mouseY - centerY) * speed * 0.02

          img.style.transform = `translate(${x}px, ${y}px)`
        })
      })
    })
  </script>
</BaseLayout>
