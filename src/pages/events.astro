  </section>

  {
    upcomingEvents.length !== 0 && (
      <section>
        <div class="justify-between text-xl font-medium lg:flex lg:text-2xl">
          <div class="rounded-md border border-black bg-black px-3 py-2 text-nowrap text-white">
