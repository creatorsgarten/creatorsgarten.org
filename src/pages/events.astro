    )
  }
  <section class="mx-auto flex max-w-7xl flex-col gap-8">
    <!-- Text section at top -->
    <div class="flex flex-col items-center justify-center text-center">
      <div
        class="-rotate-1 rounded-md border-2 border-dashed border-fuchsia-700 bg-fuchsia-700/10 px-3 py-1.5 text-xl font-medium text-fuchsia-700"
