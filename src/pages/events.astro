      </div>
      <p
        class="mt-2 max-w-[52ch] text-lg leading-relaxed text-balance text-neutral-600 max-lg:pb-4 lg:text-xl"
      >
        A recurring series of events we've been hosting. Stay tuned for the next
        edition of each series.
      </p>
    </div>

    <!-- Grid section full width -->
    <div class="grid grid-cols-2 gap-2 lg:grid-cols-3 lg:gap-3">
      {
        websiteConfig?.events.recurring.map(event => (
          <a
            class="group flex flex-col rounded-md bg-neutral-100 p-4 transition-all hover:bg-blue-500 lg:p-6"
            href={event.url}
          >
            <p class="text-lg leading-snug font-medium transition-colors group-hover:text-white lg:text-2xl">
              {event.name}
            </p>
            <p class="mt-2 text-xs tracking-wide text-neutral-500 uppercase group-hover:text-blue-200 lg:text-sm">
