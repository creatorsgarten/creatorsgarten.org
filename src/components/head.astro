---
import { SEO } from 'astro-seo'

export interface Props {
  title?: string
  description?: string
  ogImage?: string
}

const {
  title,
  description = 'Creatorsgarten - Democratize creation for all',
  ogImage,
} = Astro.props

const builtTitle = title
  ? [title, 'Creatorsgarten'].join(' Â· ')
  : 'Creatorsgarten'
const builtImage = ogImage || Astro.url.origin + '/images/og.jpg'
---

<SEO
  slot="head"
  title={builtTitle}
  description={description}
  openGraph={{
    basic: {
      title: builtTitle,
      type: 'website',
      image: builtImage,
    },
  }}
  twitter={{
    card: 'summary_large_image',
    title: builtTitle,
    image: builtImage,
  }}
/>
