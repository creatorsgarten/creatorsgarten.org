---
import { Icon } from 'react-iconify-icon-wrapper'

export interface Props {
  parents: { title: string; href?: string }[]
  title: string
}
---

<div
  class="sticky top-0 z-20 flex w-full items-center justify-between overflow-hidden text-2xl break-words whitespace-nowrap xl:text-3xl"
>
  <div
    class="sticky top-0 flex w-full items-center justify-between border-b border-neutral-300 bg-white pt-4 pb-3 text-2xl font-medium lg:flex lg:text-3xl"
  >
    <div class="flex w-full">
      <!-- <div
        class="flex aspect-square h-full items-center justify-center rounded-md bg-neutral-100"
      >
        <img src="images/icons/solid.svg" class="h-5 w-5" alt="" />
      </div> -->
      <h1 class="text-wrap lg:text-nowrap">
        {
          Astro.props.parents?.[0]?.title === 'Wiki'
            ? 'Wiki → '
            : Astro.props.parents.map((item, index) => (
                <>
                  <a href={item.href} transition:name={`breadcrumb:${index}`}>
                    {item.title}
                  </a>
                  {' → '}
                </>
              ))
        }
        <span class="font-medium">{Astro.props.title}</span>
      </h1>
    </div>

    <div class="hidden items-center text-4xl text-nowrap lg:flex">
      <div class="hidden gap-2 lg:flex">
        <a
          target="_blank"
          rel="noopener noreferrer"
          href={`https://twitter.com/intent/tweet?${new URLSearchParams({
            url: Astro.url.toString(),
            text: 'Check this',
            via: 'Creatorsgarten',
          }).toString()}`}
          aria-label="Share to Twitter"
        >
          <Icon icon="mdi:twitter" width={28} />
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          href={`https://www.facebook.com/dialog/share?${new URLSearchParams({
            app_id: '2314627122104275',
            href: Astro.url.toString(),
            feature: 'share',
            display: 'popup',
          }).toString()}`}
          aria-label="Share to Facebook"
        >
          <Icon icon="mdi:facebook" width={28} />
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .glass {
    /* background: linear-gradient(135deg, rgba(100, 100, 100, 0.07), rgba(100, 100, 100, 0.15)); */
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(3px);
    -webkit-backdrop-filter: blur(3px);
  }
</style>
