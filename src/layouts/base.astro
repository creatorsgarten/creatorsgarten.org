---
import Navbar from '$components/navbar.astro'

import './global.css'

export interface Props {
  title?: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/svg" href="/images/ring.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Readex+Pro:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg" href="/images/ring.svg" />
    <title>{title ? `${title} | Creatorsgarten` : 'Creatorsgarten'}</title>
    <script
      async
      src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.2/dist/iconify-icon.min.js"
      integrity="sha256-kwd+IKkvIXP95TLOfLvp/rHfnja1G+Ve+u1UR22A02k="
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <Navbar />

    <main>
      <slot />
    </main>

    <div class="cg-large-container">
      <footer class="flex justify-center py-8">
        © {new Date().getFullYear()} | Made with ♥ by Creatorsgarten
      </footer>
    </div>
    <!-- Cloudflare Web Analytics --><script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "3f4c5a7b957a49c3877150febe83307f"}'></script><!-- End Cloudflare Web Analytics -->
  </body>
</html>
